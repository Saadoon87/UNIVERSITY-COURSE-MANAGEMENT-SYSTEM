{
  "info": {
    "_postman_id": "eed948a5-8e5a-4741-8bbd-a04ae6314bb4",
    "name": "UCMS Project (Public Safe Version)",
    "description": "Sanitized Postman collection for UCMS (safe for public use)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "AUTH",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"{{email}}\",\n    \"password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login/",
              "host": ["{{base_url}}"],
              "path": ["login", ""]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/refresh/",
              "host": ["{{base_url}}"],
              "path": ["refresh", ""]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{
                "key": "token",
                "value": "{{access_token}}",
                "type": "string"
              }]
            },
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/logout/",
              "host": ["{{base_url}}"],
              "path": ["logout", ""]
            }
          }
        }
      ]
    },

    {
      "name": "ACCOUNT MODULE",
      "item": [
        {
          "name": "Register User (Admin Only)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{
                "key": "token",
                "value": "{{admin_access_token}}",
                "type": "string"
              }]
            },
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{new_user_email}}\",\n  \"password\": \"{{new_user_password}}\",\n  \"confirm_password\": \"{{new_user_password}}\",\n  \"first_name\": \"{{first_name}}\",\n  \"last_name\": \"{{last_name}}\",\n  \"national_id\": \"00000000000000\",\n  \"role\": \"STUDENT\",\n  \"department\": 1,\n  \"academic_year\": 2\n}"
            },
            "url": {
              "raw": "{{base_url}}/register/",
              "host": ["{{base_url}}"],
              "path": ["register", ""]
            }
          }
        },

        {
          "name": "Profile",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{
                "key": "token",
                "value": "{{access_token}}"
              }]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/profile/",
              "host": ["{{base_url}}"],
              "path": ["profile", ""]
            }
          }
        },

        {
          "name": "All Users (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{
                "key": "token",
                "value": "{{admin_access_token}}"
              }]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/allusers/",
              "host": ["{{base_url}}"],
              "path": ["allusers", ""]
            }
          }
        }
      ]
    },

    {
      "name": "DEPARTMENT MODULE",
      "item": [
        {
          "name": "Show All Departments",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{
                "value": "{{access_token}}"
              }]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/academics/department/showall/",
              "host": ["{{base_url}}"],
              "path": ["api", "academics", "department", "showall", ""]
            }
          }
        },

        {
          "name": "Create Department (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{
                "value": "{{admin_access_token}}"
              }]
            },
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{department_name}}\",\n  \"code\": \"{{department_code}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/academics/department/create/",
              "host": ["{{base_url}}"],
              "path": ["api", "academics", "department", "create", ""]
            }
          }
        }
      ]
    },

    {
      "name": "COURSE MODULE",
      "item": [
        {
          "name": "Show All Courses",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{
                "value": "{{access_token}}"
              }]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/academics/courses/",
              "host": ["{{base_url}}"],
              "path": ["api", "academics", "courses", ""]
            }
          }
        },

        {
          "name": "Create Course (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{
                "value": "{{admin_access_token}}"
              }]
            },
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{course_name}}\",\n  \"code\": \"{{course_code}}\",\n  \"credit_hours\": {{credit_hours}},\n  \"capacity\": {{capacity}},\n  \"department\": 1,\n  \"professor\": 1,\n  \"day_of_week\": \"TUESDAY\",\n  \"start_time\": \"10:00:00\",\n  \"end_time\": \"12:00:00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/academics/courses/create/",
              "host": ["{{base_url}}"],
              "path": ["api", "academics", "courses", "create", ""]
            }
          }
        }
      ]
    }
  ],

  "variable": [
    { "key": "base_url", "value": "http://127.0.0.1:8000" },
    { "key": "email", "value": "" },
    { "key": "password", "value": "" },
    { "key": "access_token", "value": "" },
    { "key": "refresh_token", "value": "" },
    { "key": "admin_access_token", "value": "" }
  ]
}
